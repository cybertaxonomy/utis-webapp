<?xml version="1.0" encoding="UTF-8"?>
<!--
#
#
# If you are having problems with logging you may debug Log4J initialization,
# start the application with a system property log4j.configDebug set to "true".
# E.g.:
#
#     java -Dlog4j.configDebug=true
#
-->
<Configuration>
  <Properties>
    <!-- 
        The ${contextPath} property is provieded by the ContextDependentInitializer which must be configured as listener in the web.xml
    -->
    <Property name="log-file-base">log/utis/${sys:contextPath}</Property>
  </Properties>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
      <!--
      <PatternLayout pattern="%d %-5p %C{2} - %m%n"/>
      -->
    </Console>
    <!-- 
    -->
    <RollingFile name="file-log" fileName="${log-file-base}.log" filePattern="${log-file-base}-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="%d %-5p [%t] %C{2} - %m%n"/>
      <Policies>
      <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.log4j.xml" level="info"/>
    <Logger name="com.mangofactory.swagger" level="info"/>
    <Logger name="org.cybertaxonomy.utis.checklist" level="info" />
    <Logger name="org.cybertaxonomy.utis" level="info"/>
    <Logger name="org.springframework" level="error"/>
    <Logger name="org.springframework.web.servlet.view" level="error"/>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="file-log"/> 
    </Root>
  </Loggers>
</Configuration>